<h2>Post a New Job</h2>

<%= form_tag('/jobs') do -%>
  <%= label_tag :poster, "Site posted on" %>
  <%= text_field_tag :poster %>

  <%= label_tag :company %>
  <%= text_field_tag :company %>

  <%= label_tag :city %>
  <%= text_field_tag :city %>

  <%= label_tag :state %>
  <%= text_field_tag :state %>

  <%= label_tag :title, "Job Title" %>
  <%= text_field_tag :title %>

  <%= label_tag :body, "Description" %>
  <%= text_field_tag :body %>

  <%= label_tag :keywords, "Search Keywords" %>
  <%= text_field_tag :keywords %>

  <%= submit_tag "Post Job" %>
<% end %>
